<h3>{{viewTitle}}</h3>

<form action="/dtr" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{dtr._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{dtr.fullName}}">
        <div class="text-danger">
            {{student.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control"name="address" placeholder="Address" value="{{dtr.address}}">
        <div class="text-danger">
    </div>
    <div class="form-group">
        <label>Job Type</label>
        <input type="text" class="form-control"name="jobtype" placeholder="Job Type" value="{{dtr.jobtype}}">
        <div class="text-danger">
    </div>
    <div class="form-group">
        <label>Comapny Name</label>
        <input type="text" class="form-control"name="companyname" placeholder="Comapny Name" value="{{dtr.companyname}}">
        <div class="text-danger">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Time-IN (AM)</label>
            <input type="time" class="form-control" name="timeInAm" placeholder="Time-IN (AM)" value="{{dtr.timeInAm}}">
        </div>
        <div class="form-group col-md-6">
            <label>Time-OUT (AM)</label>
            <input type="time" class="form-control" name="timeOutAm" placeholder="Time-IN (AM)" value="{{dtr.timeOutAm}}">
        </div>
        <div class="form-group col-md-6">
            <label>Time-IN (PM)</label>
            <input type="time" class="form-control" name="timeInPm" placeholder="Time-IN (PM)" value="{{dtr.timeInPm}}">
        </div>
        <div class="form-group col-md-6">
            <label>Time-OUT (PM)</label>
            <input type="time" class="form-control" name="timeOutPm" placeholder="Time-OUT (PM)" value="{{dtr.timeOutPm}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/dtr/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>